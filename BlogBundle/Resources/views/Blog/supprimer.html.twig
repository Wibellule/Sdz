{# src/Sdz/BlogBundle/Resources/views/Blog/supprimer.html.twig #}

{% extends "SdzBlogBundle::layout.html.twig" %}

{% block title %}
	Supprimer un article - {{ parent() }}
{% endblock %}
   
{% block sdzblog_body %}

    <h2>Supprimer un article</h2>

    <p>Êtes-vous certain de vouloir supprimer l'article "{{ article.titre }}" ?</p>

    {# On met l'id de l'article dans la route de l'action du formulaire #}
    <form action="{{ path('sdzblog_supprimer', {'id': article.id}) }}" method="POST">
        <a href="{{ path('sdzblog_voir', {'slug': article.slug}) }}" class="btn">
            <i class="icon-prev"></i>Retour à l'article
        </a>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {{ form_rest(form) }}
    </form>

	<p>
		<a href="{{ path('sdzblog_accueil') }}" class="btn"><i class="icon-chevron-left"></i>Retour à la liste</a>
	</p>
		
{% endblock %}
